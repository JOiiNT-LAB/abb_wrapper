<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="yumi">

   <xacro:macro name="single_yumi_transmission" params="name hardware_interface">

      <transmission name="${name}_tran_1">
         <type>transmission_interface/SimpleTransmission</type>
         <joint name="${name}_joint_1">
               <hardwareInterface>${hardware_interface}</hardwareInterface>
         </joint>
         <actuator name="${name}_motor_1">
            <hardwareInterface>${hardware_interface}</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
         </actuator>
      </transmission>

